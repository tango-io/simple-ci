#add-repos-modal.modal.fade.in(tabindex="-1" role="dialog" aria-labelledby="addReposModal" aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h4.modal-title Add repositories
      .modal-body
        %table.table
          %thead
            %tr
              %th name
              %th add to CI repositories
          %tbody
            = render partial: 'public_repo', collection: github_repos, as: 'repo'
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Cancel
        %button#save.btn.btn-primary{type: "button"} Save
