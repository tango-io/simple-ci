group :doc do
  gem 'sdoc', require: false
end

group :development do
  gem 'pry-rails'
  gem 'guard-rails'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'spork-rails'
end

group :test do
  gem 'sdoc', require: false
end

